<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="0" author="L-san">
        <createTable tableName="good">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="color" type="varchar"/>
        </createTable>

        <createTable tableName="composition">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="fabric" type="varchar"/>
            <column name="good_id" type="bigint">
                <constraints unique="true"/>
            </column>
            <column name="percent" type="bigint"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="good"
                                 baseColumnNames="id"
                                 constraintName="fk_good_composition"
                                 referencedTableName="composition"
                                 referencedColumnNames="good_id"/>

        <createTable tableName="delivery_composition">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="count" type="bigint"/>
            <column name="good_id" type="bigint">
                <constraints unique="true"/>
            </column>
            <column name="delivery_id" type="bigint">
                <constraints unique="true"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="good"
                                 baseColumnNames="id"
                                 constraintName="fk_good_delivery_comp"
                                 referencedTableName="delivery_composition"
                                 referencedColumnNames="good_id"/>

        <createTable tableName="delivery">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="date_time" type="datetime"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="delivery"
                                 baseColumnNames="id"
                                 constraintName="fk_delivery_composition"
                                 referencedTableName="delivery_composition"
                                 referencedColumnNames="delivery_id"/>

        <createTable tableName="sold_composition">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="good_id" type="bigint">
                <constraints unique="true"/>
            </column>
            <column name="count" type="bigint"/>
            <column name="sold_id" type="bigint">
                <constraints unique="true"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="good" baseColumnNames="id" constraintName="fk_good_sold"
                                 referencedTableName="sold_composition"
                                 referencedColumnNames="good_id"/>

        <createTable tableName="sold">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="date_time" type="datetime"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="sold" baseColumnNames="id" constraintName="fk_sold_composition"
                                 referencedTableName="sold_composition"
                                 referencedColumnNames="sold_id"/>

    </changeSet>
</databaseChangeLog>