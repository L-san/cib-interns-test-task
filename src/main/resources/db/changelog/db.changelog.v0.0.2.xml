<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="L-san">
        <createTable tableName="good">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="color" type="varchar"/>
        </createTable>

        <createTable tableName="income_composition">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="count" type="bigint"/>
            <column name="good_id" type="bigint"/>
            <column name="income_id" type="bigint"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="income_composition" baseColumnNames="good_id"
                                 constraintName="fk_good_income"
                                 referencedTableName="good"
                                 referencedColumnNames="id"/>

        <createTable tableName="income">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="date_time" type="datetime"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="income_composition" baseColumnNames="income_id"
                                 constraintName="fk_income"
                                 referencedTableName="income"
                                 referencedColumnNames="id"/>

        <createTable tableName="outcome_composition">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="good_id" type="bigint"/>
            <column name="count" type="bigint"/>
            <column name="outcome_id" type="bigint">
                <constraints unique="true"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="outcome_composition" baseColumnNames="good_id"
                                 constraintName="fk_good_outcome"
                                 referencedTableName="good"
                                 referencedColumnNames="id"/>

        <createTable tableName="outcome">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="date_time" type="datetime"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="outcome_composition" baseColumnNames="outcome_id" constraintName="fk_outcome"
                                 referencedTableName="outcome"
                                 referencedColumnNames="id"/>

    </changeSet>
</databaseChangeLog>